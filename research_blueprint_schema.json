{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ResearchBlueprint",
  "type": "object",
  "required": [
    "meta",
    "research_question",
    "novelty",
    "contributions",
    "hypotheses",
    "baselines",
    "controls",
    "decisive_experiments",
    "experiment_matrix",
    "metrics",
    "risks",
    "top_tier_simulation",
    "writing_plan",
    "assumptions"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "version",
        "created_utc",
        "idea_summary"
      ],
      "properties": {
        "version": {
          "type": "string"
        },
        "created_utc": {
          "type": "string"
        },
        "idea_summary": {
          "type": "string"
        }
      }
    },
    "research_question": {
      "type": "object",
      "required": [
        "rq",
        "scope",
        "primary_goal"
      ],
      "properties": {
        "rq": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        },
        "primary_goal": {
          "type": "string",
          "enum": [
            "accuracy",
            "efficiency",
            "accuracy_and_efficiency"
          ]
        }
      }
    },
    "novelty": {
      "type": "object",
      "required": [
        "novelty_type",
        "nearest_neighbors",
        "positioning",
        "duplicate_risk"
      ],
      "properties": {
        "novelty_type": {
          "type": "string",
          "enum": [
            "A_repackaging",
            "B_incremental",
            "C_cross_domain",
            "D_new_mechanism",
            "E_paradigm_shift"
          ]
        },
        "nearest_neighbors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "positioning": {
          "type": "string"
        },
        "duplicate_risk": {
          "type": "object",
          "required": [
            "level",
            "why",
            "mitigation"
          ],
          "properties": {
            "level": {
              "type": "string",
              "enum": [
                "low",
                "medium",
                "high"
              ]
            },
            "why": {
              "type": "string"
            },
            "mitigation": {
              "type": "string"
            }
          }
        }
      }
    },
    "contributions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "hypotheses": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "statement",
          "metrics",
          "load_bearing",
          "failure_interpretation"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "statement": {
            "type": "string"
          },
          "metrics": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "load_bearing": {
            "type": "boolean"
          },
          "failure_interpretation": {
            "type": "string"
          }
        }
      }
    },
    "baselines": {
      "type": "object",
      "required": [
        "must_have",
        "nice_to_have"
      ],
      "properties": {
        "must_have": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "nice_to_have": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "controls": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "decisive_experiments": {
      "type": "object",
      "required": [
        "top3",
        "single_best"
      ],
      "properties": {
        "top3": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/experiment"
          }
        },
        "single_best": {
          "$ref": "#/$defs/experiment"
        }
      }
    },
    "experiment_matrix": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/experiment"
      }
    },
    "metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "unit",
          "goal"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "unit": {
            "type": "string"
          },
          "goal": {
            "type": "string",
            "enum": [
              "maximize",
              "minimize",
              "target"
            ]
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "risk",
          "why_it_matters",
          "mitigation"
        ],
        "properties": {
          "risk": {
            "type": "string"
          },
          "why_it_matters": {
            "type": "string"
          },
          "mitigation": {
            "type": "string"
          }
        }
      }
    },
    "top_tier_simulation": {
      "type": "object",
      "required": [
        "scores",
        "decision",
        "upgrade_plan"
      ],
      "properties": {
        "scores": {
          "type": "object",
          "additionalProperties": {
            "type": "number"
          }
        },
        "decision": {
          "type": "string"
        },
        "upgrade_plan": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "writing_plan": {
      "type": "object",
      "required": [
        "title_candidates",
        "outline",
        "claim_registry",
        "figure_table_plan",
        "limitations"
      ],
      "properties": {
        "title_candidates": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "outline": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "claim_registry": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/claim"
          }
        },
        "figure_table_plan": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "limitations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "assumption",
          "confidence"
        ],
        "properties": {
          "assumption": {
            "type": "string"
          },
          "confidence": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          }
        }
      }
    }
  },
  "$defs": {
    "experiment": {
      "type": "object",
      "required": [
        "id",
        "name",
        "purpose",
        "datasets",
        "baselines",
        "variants",
        "controls",
        "metrics",
        "expected_outcomes",
        "interpretation_rules",
        "compute_plan"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "purpose": {
          "type": "string"
        },
        "datasets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "baselines": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "variants": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "controls": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "metrics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "expected_outcomes": {
          "type": "string"
        },
        "interpretation_rules": {
          "type": "string"
        },
        "compute_plan": {
          "type": "string"
        }
      }
    },
    "claim": {
      "type": "object",
      "required": [
        "claim_id",
        "claim_text",
        "required_evidence",
        "where_in_paper"
      ],
      "properties": {
        "claim_id": {
          "type": "string"
        },
        "claim_text": {
          "type": "string"
        },
        "required_evidence": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "where_in_paper": {
          "type": "string"
        }
      }
    }
  }
}